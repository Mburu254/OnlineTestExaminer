<%	provide(:title,	'All Questions')	%>
<div class="container-fluid">
<h1>All Questions</h1>
<div class="row">
  <div class="col-md-1">
    <%= link_to("Back", user_tests_url, class: "btn btn-primary btn-sm") %>
  </div>

  <div class="col-md-1">
    <%= link_to("View Candidate", user_test_candidates_path, class: "btn btn-primary btn-sm candidate_move") %>
  </div>
</div>

  <div class="col-md-12 col-md-offset-10">
    <%= link_to("Add Questions", new_user_test_question_path, class: "btn btn-primary btn-sm") %>
  </div>
  <div class="item">
      <img style="padding:10px" src="/assets/d.jpg" alt="b">
  </div>

<div class="row">
<div class="col-md-2">
  <p class="bg-info"><%= pluralize(@questions.size, 'question') %> found</p>
</div>
  <div class="col-md-12">
    <table class="table table-hover">
    <tr>
      <th>Number</th>
      <th>Content</th>
      <th>A</th>
      <th>B</th>
      <th>C</th>
      <th>D</th>
      <th>Answer</th>
      <th>Mark</th>
      <th>Actions</th>
    </tr>
    <% @questions.each do |question| %>
    <tr>
      <td><%= question.number %></td>
      <td><%= question.content %></td>
      <td><%= question.A %></td>
      <td><%= question.B %></td>
      <td><%= question.C %></td>
      <td><%= question.D%></td>
      <td><%= question.answer%></td>
      <td><%= question.mark%></td>
      <td class="actions">
        <%= link_to "Show", user_test_question_path(@user, @test, question), class: "btn btn-default btn-sm"%>
        <%= link_to "Edit", edit_user_test_question_path(@user, @test, question), class: "btn btn-default btn-sm" %>
        <%= link_to "Delete", user_test_question_path(@user, @test, question), method: :delete, 
        data: { comfirm: "Are you sure?" }, class: "btn btn-default btn-sm"%>
      </td>
    </tr>
    <% end %>
    </table>
  </div>
</div>
</div>
